# TradeAssist Environment Configuration Template
# Copy this file to .env and update with your actual values

# Application Settings
HOST=127.0.0.1
PORT=8000
DEBUG=true
LOG_LEVEL=INFO

# Database Configuration
DATABASE_URL=sqlite+aiosqlite:///./data/trade_assist.db
MARKET_DATA_RETENTION_DAYS=30

# Schwab API Configuration (Required for real-time data)
SCHWAB_CLIENT_ID=your_schwab_client_id_here
SCHWAB_CLIENT_SECRET=your_schwab_client_secret_here
SCHWAB_REDIRECT_URI=http://localhost:8080/callback

# Performance Configuration
MAX_WEBSOCKET_CONNECTIONS=10
ALERT_EVALUATION_INTERVAL_MS=100
DATA_INGESTION_BATCH_SIZE=100

# Notification Configuration
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token-here
SLACK_CHANNEL=#trading-alerts
SOUND_ALERTS_ENABLED=true

# Target Instruments (comma-separated lists)
TARGET_FUTURES=ES,NQ,YM,CL,GC
TARGET_INDICES=SPX,NDX,RUT
TARGET_INTERNALS=VIX,TICK,ADD,TRIN

# =============================================================================
# API STANDARDIZATION & RELIABILITY EXTENSION CONFIGURATION
# Phase 3: Integration and Polish - Configuration Management
# =============================================================================

# API Limits Configuration
# Controls rate limiting, pagination, and request constraints
TRADEASSIST_API_MAX_REQUESTS_PER_MINUTE=100
TRADEASSIST_API_MAX_REQUESTS_PER_HOUR=1000
TRADEASSIST_API_MAX_CONCURRENT_REQUESTS=10
TRADEASSIST_API_DEFAULT_PAGE_SIZE=25
TRADEASSIST_API_MAX_PAGE_SIZE=100
TRADEASSIST_API_MAX_PAGE_NUMBER=1000
TRADEASSIST_API_MAX_REQUEST_SIZE_MB=10.0
TRADEASSIST_API_MAX_JSON_DEPTH=10
TRADEASSIST_API_REQUEST_TIMEOUT_SECONDS=30.0
TRADEASSIST_API_DATABASE_QUERY_TIMEOUT_SECONDS=15.0
TRADEASSIST_API_EXTERNAL_API_TIMEOUT_SECONDS=10.0

# Validation Configuration
# Controls parameter validation rules and constraints
TRADEASSIST_VALIDATION_MIN_LOOKBACK_HOURS=1
TRADEASSIST_VALIDATION_MAX_LOOKBACK_HOURS=8760
TRADEASSIST_VALIDATION_DEFAULT_LOOKBACK_HOURS=24
TRADEASSIST_VALIDATION_ALLOWED_CONFIDENCE_LEVELS=0.90,0.95,0.99,0.999
TRADEASSIST_VALIDATION_DEFAULT_CONFIDENCE_LEVEL=0.95
TRADEASSIST_VALIDATION_MAX_DATE_RANGE_DAYS=365
TRADEASSIST_VALIDATION_MIN_DATE_RANGE_DAYS=1
TRADEASSIST_VALIDATION_MAX_PER_PAGE=100
TRADEASSIST_VALIDATION_MIN_PER_PAGE=1
TRADEASSIST_VALIDATION_MAX_STRING_LENGTH=1000
TRADEASSIST_VALIDATION_MAX_SYMBOL_LENGTH=20
TRADEASSIST_VALIDATION_MAX_INSTRUMENT_COUNT=1000
TRADEASSIST_VALIDATION_MAX_CALCULATION_PRECISION=8

# Technical Indicator Configuration
# Controls technical analysis parameters and calculations
TRADEASSIST_INDICATOR_RSI_DEFAULT_PERIOD=14
TRADEASSIST_INDICATOR_RSI_OVERBOUGHT_THRESHOLD=70.0
TRADEASSIST_INDICATOR_RSI_OVERSOLD_THRESHOLD=30.0
TRADEASSIST_INDICATOR_MACD_FAST_PERIOD=12
TRADEASSIST_INDICATOR_MACD_SLOW_PERIOD=26
TRADEASSIST_INDICATOR_MACD_SIGNAL_PERIOD=9
TRADEASSIST_INDICATOR_BOLLINGER_PERIOD=20
TRADEASSIST_INDICATOR_BOLLINGER_STD_DEV=2.0
TRADEASSIST_INDICATOR_SMA_DEFAULT_PERIODS=10,20,50,100,200
TRADEASSIST_INDICATOR_EMA_DEFAULT_PERIODS=10,20,50,100,200
TRADEASSIST_INDICATOR_STOCHASTIC_K_PERIOD=14
TRADEASSIST_INDICATOR_STOCHASTIC_D_PERIOD=3
TRADEASSIST_INDICATOR_STOCHASTIC_OVERBOUGHT=80.0
TRADEASSIST_INDICATOR_STOCHASTIC_OVERSOLD=20.0
TRADEASSIST_INDICATOR_VOLUME_SMA_PERIOD=20
TRADEASSIST_INDICATOR_VOLUME_SPIKE_THRESHOLD=2.0
TRADEASSIST_INDICATOR_ATR_PERIOD=14
TRADEASSIST_INDICATOR_MIN_DATA_POINTS=50

# Cache Configuration
# Controls caching strategies and cache management
TRADEASSIST_CACHE_MARKET_DATA_TTL=60
TRADEASSIST_CACHE_ANALYTICS_TTL=300
TRADEASSIST_CACHE_HISTORICAL_DATA_TTL=3600
TRADEASSIST_CACHE_INSTRUMENT_METADATA_TTL=86400
TRADEASSIST_CACHE_HEALTH_STATUS_TTL=30
TRADEASSIST_CACHE_MAX_SIZE_MB=256
TRADEASSIST_CACHE_MAX_ENTRIES=10000
TRADEASSIST_CACHE_EVICTION_POLICY=lru
TRADEASSIST_CACHE_EVICTION_THRESHOLD=0.8
TRADEASSIST_CACHE_ENABLE_WARMING=true
TRADEASSIST_CACHE_WARMING_BATCH_SIZE=100

# Redis Configuration (Optional)
# Enable Redis for distributed caching
TRADEASSIST_CACHE_REDIS_ENABLED=false
TRADEASSIST_CACHE_REDIS_URL=redis://localhost:6379/0
TRADEASSIST_CACHE_REDIS_KEY_PREFIX=tradeassist:
TRADEASSIST_CACHE_REDIS_CONNECTION_TIMEOUT=5

# Monitoring Configuration
# Controls monitoring, alerting, and error tracking
TRADEASSIST_MONITORING_ENABLE_ERROR_TRACKING=true
TRADEASSIST_MONITORING_ERROR_SAMPLE_RATE=1.0
TRADEASSIST_MONITORING_MAX_ERROR_DETAILS_LENGTH=1000
TRADEASSIST_MONITORING_ENABLE_PERFORMANCE_TRACKING=true
TRADEASSIST_MONITORING_PERFORMANCE_SAMPLE_RATE=1.0
TRADEASSIST_MONITORING_SLOW_QUERY_THRESHOLD_MS=1000.0
TRADEASSIST_MONITORING_SLOW_REQUEST_THRESHOLD_MS=2000.0

# Alerting Configuration
TRADEASSIST_MONITORING_ENABLE_ALERTING=false
TRADEASSIST_MONITORING_ERROR_RATE_ALERT_THRESHOLD=0.05
TRADEASSIST_MONITORING_RESPONSE_TIME_ALERT_THRESHOLD_MS=5000.0
TRADEASSIST_MONITORING_ALERT_COOLDOWN_MINUTES=15

# Metrics Collection
TRADEASSIST_MONITORING_METRICS_RETENTION_DAYS=30
TRADEASSIST_MONITORING_METRICS_AGGREGATION_INTERVAL_SECONDS=60
TRADEASSIST_MONITORING_ENABLE_DETAILED_METRICS=true
TRADEASSIST_MONITORING_ENABLE_CONFIG_CHANGE_LOGGING=true
TRADEASSIST_MONITORING_CONFIG_CHANGE_RETENTION_DAYS=90

# External Monitoring Integration (Optional)
TRADEASSIST_MONITORING_EXTERNAL_ENABLED=false
TRADEASSIST_MONITORING_EXTERNAL_ENDPOINT=https://your-monitoring-service.com/api/metrics
TRADEASSIST_MONITORING_EXTERNAL_API_KEY=your_monitoring_api_key_here

# Resource Monitoring
TRADEASSIST_MONITORING_ENABLE_RESOURCE_MONITORING=true
TRADEASSIST_MONITORING_RESOURCE_CHECK_INTERVAL_SECONDS=30
TRADEASSIST_MONITORING_MEMORY_USAGE_ALERT_THRESHOLD_MB=1024
TRADEASSIST_MONITORING_CPU_USAGE_ALERT_THRESHOLD_PERCENT=80.0